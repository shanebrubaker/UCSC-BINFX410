/*
 * Nextflow Configuration File
 * Sequence QC Pipeline
 */

// Manifest information
manifest {
    name = 'Sequence QC Pipeline'
    author = 'BINFX410'
    description = 'Chromosome-level sequence QC with trimming and cleaning'
    version = '1.0.0'
    nextflowVersion = '>=21.04.0'
}

// Default parameters
params {
    // Input files
    reference = "reference.fasta"
    reads = "reads.fastq"

    // Output directory
    outdir = "results"

    // QC parameters
    adapter = "AGATCGGAAGAGCACACGTCTGAACTCCAGTCAC"
    min_quality = 25
    min_length = 50

    // Help message
    help = false
}

// Process configuration
process {
    // Default process settings
    cpus = 1
    memory = '2 GB'
    time = '1h'

    // Error handling
    errorStrategy = 'retry'
    maxRetries = 2

    // Process-specific settings
    withName: 'SPLIT_REFERENCE' {
        cpus = 1
        memory = '1 GB'
    }

    withName: 'ALIGN_TO_CHROMOSOME' {
        cpus = 2
        memory = '2 GB'
    }

    withName: 'QC_CHROMOSOME' {
        cpus = 1
        memory = '1 GB'
    }

    withName: 'TRIM_AND_CLEAN' {
        cpus = 1
        memory = '1 GB'
    }

    withName: 'COMBINE_CLEANED' {
        cpus = 1
        memory = '2 GB'
    }

    withName: 'GENERATE_QC_REPORT' {
        cpus = 1
        memory = '2 GB'
    }

    withName: 'CHROMOSOME_QC_SUMMARY' {
        cpus = 1
        memory = '1 GB'
    }
}

// Executor configuration
executor {
    name = 'local'
    cpus = 4
    memory = '8 GB'
}

// Execution profiles
profiles {
    standard {
        process.executor = 'local'
    }

    docker {
        docker.enabled = true
        docker.runOptions = '-u $(id -u):$(id -g)'
        process.container = 'python:3.9-slim'
    }

    conda {
        conda.enabled = true
        process.conda = 'python=3.9 matplotlib=3.5 numpy=1.21'
    }

    cluster {
        process.executor = 'slurm'
        process.queue = 'normal'
        process.clusterOptions = '--account=your_account'
    }

    test {
        params.reads = "test_data/small_reads.fastq"
        params.reference = "test_data/small_reference.fasta"
        params.outdir = "test_results"
    }

    // ─── Seqera Platform profile ────────────────────────────────────────────
    // Used when launching from Seqera Platform or monitoring in an org workspace.
    // Set TOWER_WORKSPACE_ID in your environment or in Seqera Platform secrets
    // before using this profile.
    //
    // Local monitoring:  export TOWER_WORKSPACE_ID=<id>; nextflow run main.nf -profile seqera -with-tower
    // Platform launch:   add this repo as a Pipeline in Seqera and select a compute environment
    seqera {
        // Enable Docker with Wave for automatic container provisioning
        docker.enabled  = true
        wave.enabled    = true
        process.container = 'python:3.9-slim'

        // Default to local execution; Seqera Platform overrides this with the
        // selected compute environment (AWS Batch, Google Batch, Slurm, etc.)
        process.executor = 'local'
    }
}

// Resource management
executor {
    queueSize = 10
    pollInterval = '10 sec'
}

// Trace and reporting
trace {
    enabled = true
    overwrite = true
    file = "${params.outdir}/trace/execution_trace.txt"
    fields = 'task_id,hash,native_id,process,tag,name,status,exit,module,container,cpus,time,disk,memory,attempt,submit,start,complete,duration,realtime,queue,%cpu,%mem,rss,vmem,peak_rss,peak_vmem,rchar,wchar,syscr,syscw,read_bytes,write_bytes'
}

timeline {
    enabled = true
    overwrite = true
    file = "${params.outdir}/trace/execution_timeline.html"
}

report {
    enabled = true
    overwrite = true
    file = "${params.outdir}/trace/execution_report.html"
}

dag {
    enabled = true
    overwrite = true
    file = "${params.outdir}/trace/pipeline_dag.html"
}

// ─── Seqera Platform (Tower) connection ─────────────────────────────────────
// Routes monitoring data to your organization workspace.
// Required env vars (set in shell, CI, or Seqera Platform secrets):
//   TOWER_ACCESS_TOKEN  – personal or workspace access token
//   TOWER_WORKSPACE_ID  – numeric ID of the org workspace
//                         (found in cloud.seqera.io → org → workspace → Settings)
tower {
    enabled     = false                       // set to true or use -with-tower flag
    endpoint    = 'https://cloud.seqera.io'
    workspaceId = '230993537937574'
}

// Cleanup
cleanup = false

// Advanced settings
workflow {
    errorStrategy = 'finish'
}
