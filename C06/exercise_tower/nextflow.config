/*
 * Nextflow Configuration File
 * Sequence QC Pipeline
 */

// ─── Nextflow Tower / Seqera Platform ────────────────────────────────────────
// Enable Tower monitoring for all runs by reading the access token from the
// environment variable TOWER_ACCESS_TOKEN.  Set that variable before running:
//
//   export TOWER_ACCESS_TOKEN="your_token_here"
//   nextflow run main.nf -with-tower        # always-on
//
// Or activate the dedicated profile to bake the flag in automatically:
//
//   nextflow run main.nf -profile tower
//
// Self-hosted Seqera Platform users can override the endpoint:
//   export TOWER_API_ENDPOINT="https://your-seqera-host/api"
// ─────────────────────────────────────────────────────────────────────────────
tower {
    enabled     = false                         // set to true to enable for every run
    accessToken = System.getenv('TOWER_ACCESS_TOKEN') ?: ''
    endpoint    = System.getenv('TOWER_API_ENDPOINT') ?: 'https://api.cloud.seqera.io'
    // workspaceId (optional) — numeric ID of the Seqera workspace.
    // Uncomment and set if you want runs to appear in a specific workspace:
    // workspaceId = System.getenv('TOWER_WORKSPACE_ID') ?: ''
}

// Manifest information
manifest {
    name = 'Sequence QC Pipeline'
    author = 'BINFX410'
    description = 'Chromosome-level sequence QC with trimming and cleaning'
    version = '1.0.0'
    nextflowVersion = '>=21.04.0'
}

// Default parameters
params {
    // Input files
    reference = "reference.fasta"
    reads = "reads.fastq"

    // Output directory
    outdir = "results"

    // QC parameters
    adapter = "AGATCGGAAGAGCACACGTCTGAACTCCAGTCAC"
    min_quality = 25
    min_length = 50

    // Help message
    help = false
}

// Process configuration
process {
    // Default process settings
    cpus = 1
    memory = '2 GB'
    time = '1h'

    // Error handling
    errorStrategy = 'retry'
    maxRetries = 2

    // Process-specific settings
    withName: 'SPLIT_REFERENCE' {
        cpus = 1
        memory = '1 GB'
    }

    withName: 'ALIGN_TO_CHROMOSOME' {
        cpus = 2
        memory = '2 GB'
    }

    withName: 'QC_CHROMOSOME' {
        cpus = 1
        memory = '1 GB'
    }

    withName: 'TRIM_AND_CLEAN' {
        cpus = 1
        memory = '1 GB'
    }

    withName: 'COMBINE_CLEANED' {
        cpus = 1
        memory = '2 GB'
    }

    withName: 'GENERATE_QC_REPORT' {
        cpus = 1
        memory = '2 GB'
    }

    withName: 'CHROMOSOME_QC_SUMMARY' {
        cpus = 1
        memory = '1 GB'
    }
}

// Executor configuration
executor {
    name = 'local'
    cpus = 4
    memory = '8 GB'
}

// Execution profiles
profiles {
    standard {
        process.executor = 'local'
    }

    docker {
        docker.enabled = true
        docker.runOptions = '-u $(id -u):$(id -g)'
        process.container = 'python:3.9-slim'
    }

    conda {
        conda.enabled = true
        process.conda = 'python=3.9 matplotlib=3.5 numpy=1.21'
    }

    cluster {
        process.executor = 'slurm'
        process.queue = 'normal'
        process.clusterOptions = '--account=your_account'
    }

    test {
        params.reads = "test_data/small_reads.fastq"
        params.reference = "test_data/small_reference.fasta"
        params.outdir = "test_results"
    }

    // ── Tower profile ──────────────────────────────────────────────────────
    // Enables Seqera Platform monitoring and uses Docker for reproducibility.
    // Requires TOWER_ACCESS_TOKEN to be set in your environment.
    //
    // Usage:
    //   export TOWER_ACCESS_TOKEN="your_token_here"
    //   nextflow run main.nf -profile tower
    // ────────────────────────────────────────────────────────────────────────
    tower {
        tower.enabled       = true
        docker.enabled      = true
        docker.runOptions   = '-u $(id -u):$(id -g)'
        process.container   = 'python:3.9-slim'
    }
}

// Resource management
executor {
    queueSize = 10
    pollInterval = '10 sec'
}

// Trace and reporting
trace {
    enabled = true
    overwrite = true
    file = "${params.outdir}/trace/execution_trace.txt"
    fields = 'task_id,hash,native_id,process,tag,name,status,exit,module,container,cpus,time,disk,memory,attempt,submit,start,complete,duration,realtime,queue,%cpu,%mem,rss,vmem,peak_rss,peak_vmem,rchar,wchar,syscr,syscw,read_bytes,write_bytes'
}

timeline {
    enabled = true
    overwrite = true
    file = "${params.outdir}/trace/execution_timeline.html"
}

report {
    enabled = true
    overwrite = true
    file = "${params.outdir}/trace/execution_report.html"
}

dag {
    enabled = true
    overwrite = true
    file = "${params.outdir}/trace/pipeline_dag.html"
}

// Cleanup
cleanup = false

// Advanced settings
workflow {
    errorStrategy = 'finish'
}
